{% extends 'base.html.twig' %}

{% block title %}
  Hello AdministrationController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
    
    .row {
      display: flex;
      flex-direction: row;
    }
    th,
    td {
      border: solid 1px black;
    }
  </style>

  <div class="example-wrapper">
    <table>
      <tbody>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Email</th>
        <th>Cours</th>
        {% for enfant in users %}
          <tr>
            <td>{{ enfant.prenom }}</td>
            <td>{{ enfant.nom }}</td>
            <td>{{ enfant.email }}</td>
            <td>
              <a href="/gestion/view-user?email={{ enfant.email }}"><button>-></button></a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
