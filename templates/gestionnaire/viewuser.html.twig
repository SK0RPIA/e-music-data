{% extends 'base.html.twig' %}

{% block title %}
  Hello AdministrationController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
    
    .row {
      display: flex;
      flex-direction: row;
    }
    th,
    td {
      border: solid 1px black;
    }
    .ligne{
      display: flex;
      flex-direction: row;
    }
    .cours-del{
      margin-left: 25px;
    }
  </style>

  <div class="example-wrapper">
    <div>User : {{ user.nom }} {{ user.prenom }}</div>

    {% for cour in cours %}
      <div class="ligne">
        <div class="cours">Inscrit au : {{ cour.libelle }}</div>
        <div class="cours-del"><a href="/gestion/del-cour-user?email={{user.email}}&courid={{cour.id }}"><button class="btn btn-primary">Retirer</button></div></a>
      </div>
    {% endfor %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-primary" type="submit">Valider</button>
    {{ form_end(form) }}
  </div>
{% endblock %}
