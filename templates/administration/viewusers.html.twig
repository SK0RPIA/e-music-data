{% extends 'base.html.twig' %}

{% block title %}
  Hello AdministrationController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
    
    .row {
      display: flex;
      flex-direction: row;
    }
  </style>

  <div class="example-wrapper">
    {% for user in users %}
      <div class="row">
        <div class="text-black">Nom : {{ user.nom }} ;</div>
        <div class="text-black">Prenom : {{ user.prenom }} ;</div>
        <div class="text-black">Mail : {{ user.email }}</div>
      </div>
    {% endfor %}
  </div>
{% endblock %}
