{% extends 'base.html.twig' %}

{% block title %}
  Hello EnfantController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }

    .list-enfants{
        background: orange;
    }
  </style>

  <div class="example-wrapper">
    <span>Responsable : {{ user.prenom }} {{ user.nom }}</span>

    <div class="list-enfants">
      {% for enfant in enfants %}
        {{ enfant.prenom }}
      {% endfor %}
    </div>
  </div>
{% endblock %}
