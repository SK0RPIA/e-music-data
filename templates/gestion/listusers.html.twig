{% extends 'base.html.twig' %}

{% block title %}
  Hello GestionController!
{% endblock %}

{% block body %}
  <style>
    .example-wrapper {
      margin: 1em auto;
      max-width: 800px;
      width: 95%;
      font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
      background: #f5f5f5;
      padding: 2px 6px;
    }
    .list {
      width: 50%;
      display: flex;
      flex-direction: column;
      background: cyan;
    }
  </style>

  <div class="example-wrapper">
    <div class="list">
      <div>liste enfant</div>
      {% for enfant in enfants %}
        <div>{{ enfant.nom }}</div>
      {% endfor %}
    </div>
    <hr />
    <div class="list">
      <div>liste responsable</div>
      {% for resp in responsables %}
        <div>{{ resp.nom }}</div>
      {% endfor %}
    </div>
    <hr />
  </div>
{% endblock %}
